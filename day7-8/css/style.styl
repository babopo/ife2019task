mblock = 960px

*
    box-sizing border-box
    margin 0
    padding 0
    
header 
    width 100%
    color white
    background-color black
    height 100px   //header'height
    div
        position relative
        width mblock
        height 100%
        margin 0 auto
        span
            font-size: 25px
            &::after
                display inline-block
                content: ''
                height 100%
                vertical-align: middle
        ul
            list-style none
            position: absolute
            top 10px
            right 0 
            li
                display: inline-block
                a:link
                    color: white

banner
    background-color rgb(102, 187, 51)
    height 300px
    width 100%
    display: block
    div
        width mblock
        margin 0 auto
        height 100%
        position relative
        label
            position relative
            display inline-block
            width 30px
            height 40px
            top 60%
            left 85%
            line-height 40px
            text-align center
            background-color rgba(224, 241, 214, 0.3)
            cursor pointer
        input:checked
            & + label 
                padding-top 20px  //利用padding使被选中的方块变高，且由于基线对齐，字的位置不变
                height 60px
                background-color rgb(224, 241, 214)

            
nav
    padding-top 25px
    height 100px
    font-size 0
    div
        width mblock
        margin 0 auto
        label 
            font-size initial 
            text-align center
            display inline-block
            border 1px solid grey
            margin-bottom -1px
            width 80px
            height 50px
            line-height: 50px
            border-top-left-radius 20px
            border-top-right-radius 20px
            background-color rgb(238, 238, 238)
            cursor pointer
        input:checked + label
            border-bottom-color white
            background-color white

    hr
        background-color grey
        border none
        height 1px
    
main
    display block
    height 600px
    width 100%
    div
        margin auto
        display table
        width auto
        padding 0 100px
        border-spacing: 10px 5px
        span 
            display table-cell
            padding 80px
            width 1%
            border 1px solid grey
            vertical-align: middle
            text-align: center
            margin 10





footer 
    background-color rgb(102, 102, 102)
    width 100%
    height 100px
    color white
    text-align: center