html
    box-sizing: border-box

* 
    box-sizing inherit
    margin 0 
    padding 0

header 
    width 100%
    height 800px
    background-size cover
    background-image url(../pics/bg1.png)
    position relative
    &::before
        content: ''
        box-sizing border-box
        display block
        position absolute
        width 100%
        height 100%
        background-color rgba(0, 0, 0, 0.8)
    div
        position relative
        width 800px
        height 100%
        margin 0 auto
        color rgb(235, 233, 227)
        z-index 1
        text-align: center
        padding-top 180px
        p 
            margin 50px auto
            width 600px
            color: rgb(171, 168, 161)
        form 
            border 1px solid rgb(69, 65, 62)
            width 100%
            span 
                color: rgb(69, 65, 62)
                font-size: smaller
            input 
                background-color rgba(0,0,0,0.08)
                color white
                border 1px solid rgb(69, 65, 62)
                margin-bottom 50px
                width 230px
                height 40px
                margin-right 20px
                padding-left 20px
            label 
                display: inline-block
                width 100px
                height 40px
                background-color #fff
                color black
                vertical-align: top
                line-height 40px
                font-size 12px
        
.boat
    width 100%
    height: 450px
    text-align: center
    & > div
        position relative
        width 800px
        height 100%
        margin 0 auto
        padding-top 20px
        p
            font-size 30px
            & > span 
                font-size 10px
                display: block
                margin 20px
        div 
            margin-top 40px
            width 50%
            height 100px
            text-align: left
            &:nth-child(even)
                padding-right 20px
                float left
            &:nth-child(odd)
                padding-left 20px
                float right
            span 
                display: block
                overflow hidden
                &:first-of-type
                    font-weight: bold
            img 
                float left
                margin-right 10px
